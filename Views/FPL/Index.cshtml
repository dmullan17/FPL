@using Newtonsoft.Json;

@model FPL.ViewModels.FPLViewModel

@{ var data = JsonConvert.SerializeObject(Model); }

@section PageScripts {
    <script src="~/js/fpl/index.js"></script>
    <script type="text/javascript">
    const viewModel = new FPLViewModel(@Html.Raw(data));
    ko.applyBindings(viewModel, document.getElementById("app"));
    </script>
}

<div id="app">
    <div class="ui container">
        <h3 class="ui header" data-bind="with: $root.Team()">
            <span data-bind="text: name"></span>
        </h3>
        <h4 class="ui header">
            Total Points: <span data-bind="text: $root.TotalPoints()"></span>
        </h4>
        <h4 class="ui header">
            GW<span data-bind="text: $root.GameweekId()"></span> Points: <span data-bind="text: $root.GWPoints()"></span>
        </h4>
        <table class="ui table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th data-bind="visible: $root.GWTeam().automatic_subs.length > 0"></th>
                    <th>Position</th>
                    <th>Value</th>
                    <th>Mins</th>
                    <th>GF</th>
                    <th>GA</th>
                    <th>Assists</th>
                    <th>Bonus</th>
                    <th>GW Points</th>
                </tr>
            </thead>
            <tbody data-bind="foreach: $root.GWTeam().picks">
                <tr data-bind="style: { 'background-color': $root.getColor($data.multiplier) }">
                    <td>
                        <span data-bind="text: player.web_name"></span>
                        <span data-bind="visible: is_captain"><i class="copyright icon"></i></span>
                        <span data-bind="visible: player.in_dreamteam"><i class="star icon"></i></span>
                    </td>
                    <td data-bind="visible: $root.GWTeam().automatic_subs.length > 0">
                        <span data-bind="visible: $root.SubOn($data)">On</span>
                        <span data-bind="visible: $root.SubOff($data)">Off</span>
                    </td>
                    <td>
                        <span data-bind="text: player.element_type"></span>
                    </td>
                    <td>
                        <span data-bind="text: player.now_cost"></span>
                    </td>
                    <td>
                        <span data-bind="text: GWPlayer.stats.minutes"></span>
                    </td>
                    <td>
                        <span data-bind="text: GWPlayer.stats.goals_scored"></span>
                    </td>
                    <td>
                        <span data-bind="text: GWPlayer.stats.goals_conceded"></span>
                    </td>
                    <td>
                        <span data-bind="text: GWPlayer.stats.assists"></span>
                    </td>
                    <td>
                        <span data-bind="text: GWPlayer.stats.bonus"></span>
                    </td>
                    <td>
                        <span data-bind="text: GWPlayer.stats.gw_points"></span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>